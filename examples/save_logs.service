[Unit]
Description=node save_log.js
After=network.target

[Service]
ExecStart=/home/user/node_modules/mineflayer/examples/save_logs.sh
Restart=always
User=user
Group=user
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
WorkingDirectory=/home/user/node_modules/mineflayer/examples/

[Install]
WantedBy=multi-user.target

